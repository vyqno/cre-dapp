{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "..",
    "paths": {
      "@contracts/*": ["../contracts/*"]
    }
  },
  "include": ["*.ts", "../contracts/**/*.ts"]
}
